<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Chat" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" Text="Введите имя пользователя" VerticalAlignment="Top" Width="355"/>
        <Button x:Name="bConnDiscon" Content="Подключиться" HorizontalAlignment="Left" Margin="377,10,0,0" VerticalAlignment="Top" Width="130" Height="25" Click="Button_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="202" Margin="10,47,0,0" VerticalAlignment="Top" Width="497"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="56" Margin="10,254,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
